{
    "cmake.cmakePath": "cube-cmake",
    "cmake.configureArgs": [
        "-DCMAKE_COMMAND=cube-cmake"
    ],
    "cmake.preferredGenerators": [
        "Ninja"
    ],
    "cmake.copyCompileCommands": "${workspaceFolder}/compile_commands.json",
    "stm32cube-ide-clangd.path": "cube",
    "stm32cube-ide-clangd.arguments": [
        "starm-clangd",
        "--query-driver=${env:CUBE_BUNDLE_PATH}/st-arm-clang/19.1.6+st.10/bin/starm-clang",
        "--query-driver=${env:CUBE_BUNDLE_PATH}/st-arm-clang/19.1.6+st.10/bin/starm-clang++"
    ],
    "C_Cpp.clang_format_style": "file:${workspaceFolder:quantized_looper}/.clang-format",
    // "C_Cpp.clang_format_style": "file:${fileWorkspaceFolder}/../.clang-format",
    "editor.formatOnType": true,
    "editor.formatOnSave": true
}